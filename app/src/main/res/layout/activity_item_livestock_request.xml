<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    android:background="@drawable/side">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/back">

        <!-- Animal ID -->
        <TextView
            android:id="@+id/animalIDTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animal ID: A12345"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <!-- Species and Breed -->
        <TextView
            android:id="@+id/speciesBreedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Species: Cow | Breed: Friesian"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:paddingTop="4dp" />

        <!-- Age and Weight -->
        <TextView
            android:id="@+id/ageWeightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: 5 years | Weight: 500 kg"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:paddingTop="4dp" />

        <!-- Health Status -->
        <TextView
            android:id="@+id/healthStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Status: Healthy"
            android:textSize="14sp"
            android:textColor="#FFC107"
        android:paddingTop="4dp" />

        <!-- Checkbox for Selection -->
        <CheckBox
            android:id="@+id/selectCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingTop="8dp"
            android:text="Select to Proceed" />
    </LinearLayout>
</androidx.cardview.widget.CardView>